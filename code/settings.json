{
  "window.zoomLevel": -1,
  "window.restoreWindows": "none",
  "window.titleBarStyle": "custom",
  "window.enableMenuBarMnemonics": false,
  "window.openWithoutArgumentsInNewWindow": "on",
  "window.openFilesInNewWindow": "on",
  "window.openFoldersInNewWindow": "on",

  "workbench.colorTheme": "SIMPLE DARK MODE",
  "workbench.iconTheme": "seti",
  "workbench.settings.editor": "json",

  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,

  "git.enableSmartCommit": true,

  "diffEditor.renderSideBySide": false,

  "editor.fontFamily": "Hack, Consolas, 'Courier New', monospace",
  "editor.tabSize": 2,
  "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?_",
  "editor.codeLens": false,
  "editor.minimap.enabled": false,
  "editor.smoothScrolling": false,
  "editor.cursorStyle": "block",
  "editor.cursorBlinking": "solid",
  "editor.scrollbar.verticalScrollbarSize": 20,
  "editor.formatOnSave": true,

  "explorer.confirmDelete": false,

  "breadcrumbs.enabled": true,

  "[yaml]": {
    "editor.formatOnSave": false
  },

  "[dockerfile]": {
    "editor.tabSize": 4
  },

  "editor.tokenColorCustomizations": {
    "[SIMPLE DARK MODE]": {
      "textMateRules": [
        {
          "name": "Strings",
          "scope": ["string", "punctuation.definition.string"],
          "settings": {
            "foreground": "#b3b3b3",
            "fontStyle": ""
          }
        },
        {
          "name": "Comments",
          "scope": ["comment", "punctuation.definition.comment"],
          "settings": {
            "fontStyle": "",
            "foreground": "#888888"
          }
        }
      ]
    }
  },

  "workbench.colorCustomizations": {
    "[SIMPLE DARK MODE]": {
      "activityBar.background": "#1a1a1a",

      "button.background": "#000000",
      "button.hoverBackground": "#606060",

      "editor.background": "#1a1a1a",
      "editor.findMatchBackground": "#606060",
      "editor.findMatchBorder": "#606060",
      "editor.findMatchHighlightBackground": "#000000",
      "editor.findMatchHighlightBorder": "#606060",
      "editor.lineHighlightBackground": "#303030",
      "editor.selectionBackground": "#606060",
      "editor.selectionHighlightBorder": "#606060",
      "editor.wordHighlightBackground": "#606060",
      "editor.wordHighlightBorder": "#606060",
      "editor.wordHighlightStrongBackground": "#000000",
      "editor.wordHighlightStrongBorder": "#606060",

      "editorBracketMatch.background": "#606060",

      "editorGroupHeader.noTabsBackground": "#1a1a1a",
      "editorGroupHeader.tabsBackground": "#1a1a1a",

      "editorIndentGuide.activeBackground": "#888888",
      "editorIndentGuide.background": "#303030",

      "editorLineNumber.foreground": "#606060",

      "focusBorder": "#ffffff",

      "gitlens.trailingLineForegroundColor": "#888888",

      "input.background": "#1a1a1a",
      "input.border": "#606060",
      "input.foreground": "#ffffff",

      "inputOption.activeBorder": "#f78c00",

      "list.focusBackground": "#606060",
      "list.hoverBackground": "#606060",

      "menu.selectionBackground": "#606060",

      "panel.background": "#1a1a1a",

      "peekViewTitle.background": "#1a1a1a",

      "scrollbarSlider.background": "#606060",

      "selection.background": "#606060",

      "sideBar.background": "#1a1a1a",

      "sideBarSectionHeader.background": "#000000",
      "sideBarSectionHeader.background": "#1a1a1a",

      "sideBarTitle.foreground": "#aaaaaa",

      "tab.activeBackground": "#1a1a1a",
      "tab.hoverBackground": "#606060",
      "tab.inactiveBackground": "#1a1a1a",
      "tab.inactiveForeground": "#aaaaaa",
      "tab.unfocusedInactiveForeground": "#aaaaaa",

      "textLink.activeForeground": "#00d9ff",

      "titleBar.activeBackground": "#1a1a1a",
      "titleBar.inactiveBackground": "#1a1a1a",

      "welcomePage.buttonHoverBackground": "#606060"
    }
  },

  "xmlTools.enableXmlTreeView": true,

  "gitlens.blame.heatmap.enabled": true,
  "gitlens.currentLine.enabled": false,
  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true
  },

  "eslint.alwaysShowStatus": true,

  // AWS CloudFormation
  "yaml.customTags": [
    "!And",
    "!If",
    "!Not",
    "!Equals",
    "!Or",
    "!FindInMap",
    "!Base64",
    "!Cidr",
    "!Ref",
    "!Sub",
    "!GetAtt",
    "!GetAZs",
    "!ImportValue",
    "!Select",
    "!Split",
    "!Join"
  ]
}
